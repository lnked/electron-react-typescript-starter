{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["es6", "es7", "dom"],
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "typings/*"]
  },
  "exclude": ["node_modules", "configs", "dist", "src/**/*.test.tsx", "src/**/*.spec.tsx"]
}
